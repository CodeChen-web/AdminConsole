<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 控制 mybatis全局开关 -->
    <settings>
        <!-- 开启 log4j -->
        <setting name="logImpl" value="LOG4J" />
    </settings>

    <!-- typeAliases 别名; -->
    <!-- 系统内置别名: 把类型全小写 -->
    <typeAliases>
        <!-- 给某个类起别名：alias=”自定义”,*dao.xml中用alias自定义别名引用-->
        <!--<typeAlias type="com.atlantis.domain.Admin" alias="Admin" />-->
        <!-- 给某个包下所有类起别名：别名为类名,不区分大小写,*dao.xml中通过类名引用-->
        <package name="com.atlantis.domain"/>
    </typeAliases>

    <!--指定映射配置文件的位置，映射配置文件指的是每个dao独立的配置文件-->
    <mappers>
        <!--使用xml进行查询-->
        <!--<mapper resource="com/atlantis/dao/AdminDao.xml"/>-->
        <!--使用注解-->
        <!--<mapper class="com.atlantis.dao.AdminDao"/>-->
        <!-- 使用Mybatis接口绑定方案时使用下面配置 -->
        <package name="com.atlantis.dao"/>
    </mappers>
</configuration>